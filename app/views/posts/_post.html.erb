<div class="col-md-6 col-lg-4 article">
  <div class="item">
    <%= image_tag(post.image) %>
    <h3><%= post.title %></h3>
    <p><%= post.content %></p>
  </div>
  <div class="author">
    <div class="avatar">
      <%= image_tag(post.user.avatar) %>
    </div>

    <div class="name">
      <p class="author-name"><%= post.user.name %></p>
      <p class="author-place">發佈於 異類矽谷</p>
    </div>

    <div class="icon">
      <img src="./icon-like.svg" alt="">
    </div>

    <div class="icon">
      <img src="./icon-bookmark.svg" alt="">
    </div>
  </div>

</div>